<Window x:Class="Lista_Compras_Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lista_Compras_Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView HorizontalAlignment="Left" Height="251" Margin="30,83,0,0" VerticalAlignment="Top" Width="182" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ComboBox HorizontalAlignment="Left" Margin="30,56,0,0" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="CategoriaTxt" HorizontalAlignment="Left" Margin="30,24,0,0" TextWrapping="Wrap" Text="Listas" VerticalAlignment="Top" Width="154" Height="27"/>
        <Rectangle HorizontalAlignment="Left" Height="271" Margin="375,83,0,0" Stroke="Black" VerticalAlignment="Top" Width="393"/>
        <Label Content="Categorias" HorizontalAlignment="Left" Margin="400,46,0,0" VerticalAlignment="Top" Height="28" Width="115"/>
    </Grid>
</Window>
